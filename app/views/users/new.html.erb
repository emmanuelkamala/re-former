    <%= f.label 'Email' %>
    <%= f.email_field :email%>
    <br /> <br />
  
    <%= f.label 'Password' %>
    <%= f.password_field :password %>
    <br /> <br />
  
    <%= f.submit "Create" %>
  
  <% end %>
 
